{
  "manifest_version": 2,
  "name": "Sync Video",
  "version": "1.0",

  "icons": {
      "128": "128x128.png"
  },
  "content_scripts": [
    {
      "matches": [ "*://*/*" ],
      "js": [ "jquery-2.2.1.min.js", "content.js" ]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "storage",
    "https://www.youtube.com/*",
    "http://stats.pusher.com/*"
  ],

   "browser_action": {
    "default_title": "LostTime",
    "default_popup": "popup.html"
  }
}
